package practicadialogos;

import java.awt.BorderLayout;
import java.awt.GridLayout;

import javax.swing.JButton;
import javax.swing.JPanel;

public class Lamina extends JPanel
{
	private static final long serialVersionUID = 1L;
	 
	private JPanel mensajes, boton;
	
	private JButton listo;
	
	private LaminaSecciones[] secciones; 
	
	public Lamina() 
	{
		setLayout(new BorderLayout());
		
		anadirComponentes();
		
		anadirMensajes();
		
		add(mensajes, BorderLayout.CENTER);
		add(boton, BorderLayout.SOUTH);	
	}
	
	public void anadirMensajes() 
	{
		mensajes.add(new LaminaSecciones("Tipo", new String[] {"Mensaje", "Confirmar", "Opción", "Entrada"}));
		mensajes.add(new LaminaSecciones("Tipo mensaje", new String[] {"ERROR_MESSAGE", "INFORMATION_MESSAGE", "WARNING_MENSSAGE", "QUESTION_MENSSAGE", "PLAIN_MENSSAGE"}));
		mensajes.add(new LaminaSecciones("Mensaje", new String[] {"Cadena", "Icono", "Componente", "Otros", "Object[]"}));
		mensajes.add(new LaminaSecciones("Confirmar", new String[] {"DEFAUT_OPTION", "YES_NO_OPTION", "YES_NO_CANCEL_OPTION", "OK_CANCEL_OPTION"}));
		mensajes.add(new LaminaSecciones("Opción", new String[] {"String[]", "Icon[]", "Object[]"}));
		mensajes.add(new LaminaSecciones("Entrada", new String[] {"Campo de texto", "Combo"}));
	}
	
	public void anadirComponentes() 
	{
		secciones = new LaminaSecciones[6];
		
		listo = new JButton("Listo");
		
		mensajes = new JPanel();
		mensajes.setLayout(new GridLayout(2,3));
		
		boton = new JPanel();
		
		boton.add(listo);
	}
}
