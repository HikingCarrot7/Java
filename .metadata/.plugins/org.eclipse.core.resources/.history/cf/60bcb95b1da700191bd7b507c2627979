package productorconsumidor;

public class BufferSinSincronizacion implements Buffer
{
	
	private int buffer = -1; 
	
	private final ArrayBlockingQueue<Integer>(1);
	
	public BuffeBloqueo() 
	{
		
	}

	@Override
	public void establecer(int valor) throws InterruptedException
	{
		System.out.printf("Productor escribe\t%2d", valor);
		
		buffer = valor;
		
	}

	@Override
	public int obtener() throws InterruptedException 
	{
		System.out.printf("Consumidor lee\t\t%2d", buffer);
		
		return buffer;
	}

}
