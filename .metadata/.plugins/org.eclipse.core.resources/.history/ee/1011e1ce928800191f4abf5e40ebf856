package eventos;

import java.awt.Color;
import java.awt.Frame;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.awt.event.WindowEvent;
import java.awt.event.WindowListener;
import java.awt.event.WindowStateListener;

import javax.swing.JButton;
import javax.swing.JLabel;
import javax.swing.JPanel;

public class miLamina extends JPanel implements WindowStateListener, WindowListener
{
	private static final long serialVersionUID = 1L;
	
	JButton azul = new JButton("Azul");
	JButton amarillo = new JButton("Amarillo");
	JButton rojo = new JButton("Rojo");
	ColorFondo color;
	
	public miLamina() 
	{
		add(azul);
		add(amarillo);
		add(rojo);
		
		azul.addActionListener(new ColorFondo(Color.blue));
		
		amarillo.addActionListener(new ColorFondo(Color.yellow));
		
		rojo.addActionListener(new ColorFondo(Color.red));
		
		setBackground(Color.cyan);
	}
	
	private class ColorFondo implements ActionListener
	{
		private Color c;
		
		public ColorFondo(Color c) 
		{
			this.c = c;
		}

		@Override
		public void actionPerformed(ActionEvent e) 
		{
			setBackground(c);
			
		}
	}
	
	@Override
	public void windowStateChanged(WindowEvent e) 
	{	
		if(e.getNewState() == Frame.MAXIMIZED_BOTH) 
		{
			setBackground(Color.green);
			
		}else if(e.getOldState() == Frame.MAXIMIZED_BOTH) 
		{
			setBackground(Color.black);
		}
	}

	@Override
	public void windowActivated(WindowEvent arg0) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void windowClosed(WindowEvent arg0) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void windowClosing(WindowEvent arg0) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void windowDeactivated(WindowEvent arg0) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void windowDeiconified(WindowEvent arg0) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void windowIconified(WindowEvent e) 
	{
		setBackground(Color.pink);
	}

	@Override
	public void windowOpened(WindowEvent arg0) {
		// TODO Auto-generated method stub
		
	}
}




