package directorios;

import java.io.File;
import java.io.IOException;
import java.util.Scanner;

public class PruebaDirectorios 
{
	private static Scanner in;
	
	private static File carpetaDireccion, archivoDireccion;
	
	private static String carpeta = "C:\\Archivos\\Estrella", archivo = "C:\\Archivos\\Estrella\\Nicolás.txt"; 

	public PruebaDirectorios() 
	{

		in = new Scanner(System.in);
		
	}
	
	public static void main(String[] args) 
	{
		
		//System.out.println("Ruta: ");
		
		analizarRuta(carpeta);
		

	}
	
	public static void analizarRuta(String ruta) 
	{
		
		nombre = new File(ruta);
		
		//System.out.println(nombre.getAbsolutePath());
		
		if(nombre.exists()) 
		{
			System.out.printf("%s%s%n%s%n%n", "La ruta existe", nombre.isFile() ? " y es un archivo" : " y no es un archivo", nombre.length());
			
			if(nombre.isDirectory()) 
			{
				String[] directorio = nombre.list();
				
				for(String D: directorio) 
				{
					System.out.printf("%s%n", D);
					
					File f = new File(nombre.getAbsolutePath(), D);
					
					if(f.isDirectory()) 
					{
						String[] subcarpeta = f.list();
						
						for(String S: subcarpeta)
							System.out.println(S);
						
					}
					
				}
			}else 
			{
				nombre.mkdir();
				
				try 
				{
					nombre.createNewFile();
					
				} catch (IOException e) 
				{

				}
			}
		}
		
	}

}
