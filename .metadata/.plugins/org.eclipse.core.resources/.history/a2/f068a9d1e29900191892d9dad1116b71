package alumos;

public class Alumnos 
{
	private String nombre, asignatura;
	private int edad;
	
	public Alumnos(String nombre, int edad, String asignatura) 
	{
		this.nombre = nombre;
		this.edad = edad;
		this.asignatura = asignatura;
	}
	
	public String obtenerAsignatura() 
	{
		return asignatura;
	}
	
	@Override
	public String toString() 
	{
		return String.format("%-15s %s", "Nombre: " + nombre, edad + " años.");
	}
	
}
