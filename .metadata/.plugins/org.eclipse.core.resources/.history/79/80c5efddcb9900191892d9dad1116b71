package directorios;

import java.io.FileReader;
import java.io.FileWriter;
import java.io.IOException;

public class AccesoFichero 
{
	private static Fichero fichero;
	
	public static void main(String[] args) 
	{
		fichero = new Fichero();
		
		fichero.leerArchivo();
		
		fichero.escribirArchivo();
	}
}

class Fichero
{
	
	private int c;
	private FileReader lectura;
	private FileWriter escritura;
	
	public void leerArchivo() 
	{
		try 
		{
			lectura = new FileReader("C:/Archivos/Prueba.txt");
			
			do 
			{				
				c = lectura.read();
				
				System.out.print((char) c);
				
			}while(c != -1);
			
			lectura.close();
			
		} catch (IOException e) 
		{
			System.out.println("No está el archivo");		
		}
	}
	
	public void escribirArchivo() 
	{	
		String s = "Esto es una prueba de escritura\n";
		
		try 
		{
			escritura = new FileWriter("C:/Archivos/Prueba.txt", true);
			
			for(int i = 0; i < s.length(); i++) 
				escritura.write(s.charAt(i));
			
			escritura.close();
			
		} catch (IOException e) 
		{
			System.out.println("No se encuentra el archivo");
		}
	}
}
