package pruebas;

public class Pruebas 
{
	
	public interface Saludador
	{
		
		public void hola();
		
		public void despedida();
		
	}
	
	private static abstract class Sigueme
	{
		
		public abstract void facebook();
		
		
	}

	public static void main(String[] args) 
	{
		
		Saludador saludar = new Saludador() 
		{

			@Override
			public void hola() 
			{
				
				System.out.println("Hola, esta es una prueba de las malas xdxdxd");
				
			}

			@Override
			public void despedida() 
			{
				System.out.println("Adiós es la palabra de las malas lenguas xd");
				
			}
			
		};
		
		Pruebas.Sigueme xd = new Sigueme() 
		{

			@Override
			public void facebook() 
			{
				System.out.println("Sígueme en facebook");
				
			}
			
		};
		
		saludar.hola();
		
		saludar.despedida();

		xd.facebook();
	}

}

class Testeo
{
	
	public Testeo() 
	{
		new Pruebas().Saludador prueba = new Pruebas().new Saludador() 
		{

			@Override
			public void hola() {
				// TODO Auto-generated method stub
				
			}

			@Override
			public void despedida() {
				// TODO Auto-generated method stub
				
			}
			
		};
	}
	

}
