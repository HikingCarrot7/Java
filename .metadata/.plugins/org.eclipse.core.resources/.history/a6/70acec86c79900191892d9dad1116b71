package directorios;

import java.io.FileReader;
import java.io.FileWriter;
import java.io.IOException;

public class AccesoFichero 
{
	public static void main(String[] args) 
	{
		new Fichero().leerArchivo();
	}
}

class Fichero
{
	
	private int c;
	private FileReader lectura;
	private FileWriter escritura;
	
	public void leerArchivo() 
	{
		try 
		{
			lectura = new FileReader("C:/Archivos/Prueba.txt");
			
			do 
			{				
				c = lectura.read();
				
				System.out.print((char) c);
				
			}while(c != -1);
			
			lectura.close();
			
		} catch (IOException e) 
		{
			System.out.println("No está el archivo");
			
		}
	}
	
	public void escribirArchivo() 
	{
		
		String s = "Esto es una prueba de escritura";
		
		try 
		{
			escritura = new FileWriter("C:/Archivos/Prueba.txt");
		} catch (IOException e) 
		{
			System.out.println("No se encuentra el archivo");
		}
		
		
		
	}
	
	
}
